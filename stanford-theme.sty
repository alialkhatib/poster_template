% tikzposter style
\definecolorstyle{StanfordStyle} {
    \usecolorpalette{StanfordPalette}
}{
    % background
    \colorlet{backgroundcolor}{white}
    \colorlet{framecolor}{white}
    % title colors
    \colorlet{titlefgcolor}{Black}
    \colorlet{titlebgcolor}{white}
    % block COLORS
    \colorlet{blocktitlebgcolor}{colorOne}
    \colorlet{blocktitlefgcolor}{white}
    \colorlet{blockbodybgcolor}{white}
    \colorlet{blockbodyfgcolor}{Black}
    % innerblock colors
    \colorlet{innerblocktitlebgcolor}{white}
    \colorlet{innerblocktitlefgcolor}{Black}
    \colorlet{innerblockbodybgcolor}{colorTwo}
    \colorlet{innerblockbodyfgcolor}{Black}
    % note colors
    \colorlet{notefgcolor}{Black}
    \colorlet{notebgcolor}{colorTwo}
    \colorlet{noteframecolor}{colorTwo}
}

% -- STYLE --

% background
\definebackgroundstyle{EmoryBackgroundStyle}{
    \draw[line width=0pt, color=framecolor, fill=backgroundcolor]
    (bottomleft) rectangle (topright);
}

% title
\definetitlestyle{StanfordTitleStyle}{
    width=\textwidth, linewidth=5pt, titletotopverticalspace=0in
}{
    \begin{scope}[line width=\titlelinewidth]
    \draw[color=colorThree]
    (\titleposleft,\titleposbottom)--(\titleposright,\titleposbottom);
    \end{scope}
}

% block
\defineblockstyle{StanfordBlockStyle}{
    titlewidthscale=1, bodywidthscale=1, roundedcorners=0
}{
    \draw[color=framecolor, fill=blockbodybgcolor,
    rounded corners=\blockroundedcorners] (blockbody.south west)
    rectangle (blockbody.north east);
    \ifBlockHasTitle
    \draw[color=framecolor, fill=blocktitlebgcolor,
    rounded corners=\blockroundedcorners] (blocktitle.south west)
    rectangle (blocktitle.north east);
    \fi
}

% -- THEME -- 
% emory theme
\definelayouttheme{StanfordTheme}{
    \usecolorstyle[colorPalette=StanfordPalette]{StanfordStyle}
    \usebackgroundstyle{EmoryBackgroundStyle}
    \usetitlestyle{StanfordTitleStyle}
    \useblockstyle{StanfordBlockStyle}
    \useinnerblockstyle{Default}
    \usenotestyle{Default}
}

% -- TITLE FORMAT --

% place logo to right of centered title
\makeatletter
\renewcommand\TP@maketitle{%
   \centering
   \begin{minipage}[b]{0.8\linewidth}
        \centering
        \color{titlefgcolor}
        {\bfseries \Huge \sc \@title \par}
        \vspace*{1em}
        {\huge \@author \par}
        \vspace*{1em}
        {\LARGE \@institute}
    \end{minipage}%
    \tikz[remember picture,overlay]\node[anchor=south east,xshift=0.4875\linewidth,inner sep=0pt] {%
       \@titlegraphic
    };
}
\makeatother